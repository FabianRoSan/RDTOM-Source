set -e

for D in tests/unit/*; do
    if [ -f "${D}" ]; then
			DIR="$D.php"
			echo "testing $DIR"
			phpunit $DIR
	fi
done

echo "PHP Unit tests completed"

if [ $# -gt 0  ]; then
	MESSAGE="$@"
	echo "Committing with message '$MESSAGE'"
	git pull
	git add -A
	git commit -am "$MESSAGE"
	git push
else
  echo "No commit message, no commit"
fi